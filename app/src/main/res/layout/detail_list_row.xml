<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewDetailListRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/unit_5dp"
    android:layout_marginRight="@dimen/unit_5dp"
    android:layout_marginTop="@dimen/unit_5dp"
    android:background="@android:color/white"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    card_view:cardCornerRadius="@dimen/unit_4dp"
    card_view:cardElevation="@dimen/unit_3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ImgDetailRowImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/unit_140dp"
            android:layout_gravity="center"
            android:scaleType="fitXY" />

        <LinearLayout
            android:padding="@dimen/unit_5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ImgDetailLeft"
                android:layout_width="@dimen/unit_120dp"
                android:layout_height="@dimen/unit_120dp"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <com.coruscate.centrecourt.CustomControls.TypefacedTextView
                        android:id="@+id/txtName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/unit_4dp"
                        android:layout_marginRight="@dimen/unit_8dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:textAllCaps="true"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/unit_12dp"
                        android:visibility="visible"
                        app:fontStyle="regular" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/imgIconEgg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_egg"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/imgIconEggLess"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/unit_2dp"
                            android:src="@drawable/icon_egg_less"
                            android:visibility="gone" />
                    </LinearLayout>

                </LinearLayout>

                <com.coruscate.centrecourt.CustomControls.TypefacedTextView
                    android:id="@+id/txtNewSession"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/unit_5dp"
                    android:padding="@dimen/unit_1dp"
                    android:singleLine="true"
                    android:textSize="12dp"
                    android:visibility="gone"
                    app:fontStyle="regular" />

                <RatingBar
                    android:id="@+id/rattingBar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/unit_3dp"
                    android:layout_marginLeft="@dimen/unit_5dp"
                    android:layout_marginTop="@dimen/unit_3dp"
                    android:numStars="5"
                    android:progressTint="@color/yellow"
                    android:rating="3"
                    android:stepSize="0.5"
                    android:visibility="gone" />

                <com.coruscate.centrecourt.CustomControls.TypefacedTextView
                    android:id="@+id/txtPriceLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/unit_5dp"
                    android:padding="@dimen/unit_1dp"
                    android:singleLine="true"
                    android:text="Price Starts From"
                    android:textColor="@color/actionbar"
                    android:textSize="14dp"
                    app:fontStyle="regular" />

                <com.coruscate.centrecourt.CustomControls.TypefacedTextView
                    android:id="@+id/txtPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/unit_5dp"
                    android:layout_weight="1"
                    android:padding="@dimen/unit_1dp"
                    android:textColor="@android:color/black"
                    android:textSize="14dp"
                    app:fontStyle="regular" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <ImageView
        android:id="@+id/ImgWishList"
        android:layout_width="@dimen/unit_32dp"
        android:layout_height="@dimen/unit_32dp"
        android:layout_above="@+id/viewDetail"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|right"
        android:padding="@dimen/unit_5dp"
        android:src="@drawable/icon_heart_1" />
</android.support.v7.widget.CardView>



