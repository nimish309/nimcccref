<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/unit_5dp"
    android:paddingLeft="@dimen/unit_5dp"
    android:paddingRight="@dimen/unit_5dp">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardViewTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        card_view:cardCornerRadius="@dimen/unit_3dp"
        card_view:cardElevation="@dimen/unit_3dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ImgRowImage"
                android:layout_width="@dimen/unit_80dp"
                android:layout_height="@dimen/unit_80dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/unit_20dp"
                android:padding="@dimen/unit_10dp"
                android:src="@drawable/hart_cake" />

            <com.coruscate.centrecourt.CustomControls.TypefacedTextView
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/ImgRowImage"
                android:padding="@dimen/unit_1dp"
                android:layout_centerInParent="true"
                android:text="Sweet hart cake"
                android:layout_marginLeft="@dimen/unit_20dp"
                android:textColor="@color/gray"
                android:textSize="16dp"
                app:fontStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>