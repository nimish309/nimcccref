<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_rootView"
    android:layout_margin="@dimen/unit_16dp"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/white">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="@dimen/unit_4dp"
        android:padding="12dp"
        android:text="Title"
        android:textColor="#000"
        android:textSize="@dimen/unit_18dp" />

    <ScrollView
        android:id="@+id/message_scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTitle"
        android:padding="12dp"
        android:scrollbarSize="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam"
                android:textColor="#000"
                android:textSize="@dimen/unit_14dp" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="@dimen/unit_8dp">

        <Button
            android:id="@+id/button_cancel"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/background_button_rectangle"
            android:text="Cancel"
            android:textColor="#000"
            android:textSize="@dimen/unit_12dp" />

        <Button
            android:id="@+id/button_accept"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/background_button_rectangle"
            android:text="Ok"
            android:textColor="#1E88E5"
            android:textSize="@dimen/unit_12dp" />
    </LinearLayout>
</LinearLayout>
