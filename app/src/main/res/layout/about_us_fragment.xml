<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewTop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    card_view:cardCornerRadius="@dimen/unit_0dp"
    card_view:cardElevation="@dimen/unit_3dp">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/unit_5dp">

            <com.coruscate.centrecourt.CustomControls.TypefacedTextView
                android:id="@+id/txtIntroduction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/unit_5dp"
                android:padding="@dimen/unit_1dp"
                android:singleLine="true"
                android:text="Introduction"
                android:textSize="16dp"
                app:fontStyle="regular" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgPicture"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/unit_100dp"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:padding="@dimen/unit_10dp"
                    android:src="@drawable/hart_cake" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/unit_5dp">

                    <com.coruscate.centrecourt.CustomControls.TypefacedTextView
                        android:id="@+id/txtIntroductionfirst"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/unit_2dp"
                        android:padding="@dimen/unit_1dp"
                        android:singleLine="true"
                        android:text="Description"
                        android:textSize="14dp"
                        app:fontStyle="light" />

                    <com.coruscate.centrecourt.CustomControls.TypefacedTextView
                        android:id="@+id/txtIntroductionSecond"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/unit_2dp"
                        android:padding="@dimen/unit_1dp"
                        android:singleLine="true"
                        android:text="Description"
                        android:textSize="14dp"
                        app:fontStyle="regular" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</android.support.v7.widget.CardView>