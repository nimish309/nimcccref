<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewTop"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/unit_8dp"
    android:layout_marginRight="@dimen/unit_8dp"
    android:layout_marginTop="@dimen/unit_8dp"
    android:background="@android:color/white"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    card_view:cardCornerRadius="@dimen/unit_3dp"
    card_view:cardElevation="@dimen/unit_3dp">


    <LinearLayout
        android:id="@+id/rowLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/unit_8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.coruscate.centrecourt.CustomControls.TypefacedTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Order ID: "
                    android:textSize="@dimen/unit_14dp"
                    android:textStyle="bold"
                    app:fontStyle="bold" />

                <com.coruscate.centrecourt.CustomControls.TypefacedTextView
                    android:id="@+id/txtOrderId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/unit_14dp"
                    android:textStyle="bold"
                    app:fontStyle="bold" />

                <com.coruscate.centrecourt.CustomControls.TypefacedTextView
                    android:id="@+id/txtTotalQty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="1 items"
                    android:layout_marginLeft="@dimen/unit_4dp"
                    android:layout_gravity="right"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/unit_14dp"
                    app:fontStyle="regular" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <com.coruscate.centrecourt.CustomControls.TypefacedTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivered on: "
                    android:textColor="@color/gray"
                    android:textSize="@dimen/unit_14dp"
                    app:fontStyle="regular" />

                <com.coruscate.centrecourt.CustomControls.TypefacedTextView
                    android:id="@+id/txtDeliveryDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/unit_14dp"
                    android:textStyle="bold"
                    app:fontStyle="bold" />

                <com.coruscate.centrecourt.CustomControls.TypefacedTextView
                    android:id="@+id/txtTotalItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/unit_8dp"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/unit_14dp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:fontStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible">

                <com.coruscate.centrecourt.CustomControls.TypefacedTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Current Status: "
                    android:textSize="@dimen/unit_14dp"
                    app:fontStyle="regular" />

                <com.coruscate.centrecourt.CustomControls.TypefacedTextView
                    android:id="@+id/txtDeliveryStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="#008000"
                    android:textSize="@dimen/unit_14dp"
                    android:textStyle="bold"
                    app:fontStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/unit_0.5dp"
                android:layout_marginTop="@dimen/unit_8dp"
                android:background="@color/gray" />

            <LinearLayout
                android:id="@+id/itemsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/unit_0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/unit_8dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.coruscate.centrecourt.CustomControls.TypefacedTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Item: "
                    android:textColor="@color/gray"
                    app:fontStyle="regular" />

                <com.coruscate.centrecourt.CustomControls.TypefacedTextView
                    android:id="@+id/txtTotalItem1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="3"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    app:fontStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <com.coruscate.centrecourt.CustomControls.TypefacedTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Total Amount: "
                    app:fontStyle="regular" />

                <com.coruscate.centrecourt.CustomControls.TypefacedTextView
                    android:id="@+id/txtTotalAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Rs. 500"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    app:fontStyle="bold" />

            </LinearLayout>

            <com.coruscate.centrecourt.CustomControls.TypefacedTextView
                android:id="@+id/txtPaymentStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/unit_2dp"
                android:text="Cash On Delivery"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                app:fontStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayoutBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">

            <com.coruscate.centrecourt.CustomControls.TypedfacedButton
                android:id="@+id/btnTrack"
                android:layout_width="match_parent"
                android:layout_height="@dimen/unit_32dp"
                android:layout_gravity="center"
                android:background="@drawable/button_selector"
                android:text="Track order"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:paddingLeft="@dimen/unit_5dp"
                android:paddingRight="@dimen/unit_5dp"
                android:layout_marginRight="@dimen/unit_0.5dp"
                android:layout_weight="1"
                app:fontStyle="regular" />

            <com.coruscate.centrecourt.CustomControls.TypedfacedButton
                android:id="@+id/btnCancel"
                android:layout_marginLeft="@dimen/unit_0.5dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/unit_32dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/button_selector"
                android:text="Cancel order"
                android:textAllCaps="false"
                android:paddingLeft="@dimen/unit_5dp"
                android:paddingRight="@dimen/unit_5dp"
                android:textColor="@color/white"
                app:fontStyle="regular" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>

