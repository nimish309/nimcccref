<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayoutFilter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/unit_48dp"
    android:background="@color/activityBackground"
    android:orientation="vertical"
    android:visibility="gone">

    <ScrollView
        android:id="@+id/filterLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/activityBackground"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                card_view:cardCornerRadius="@dimen/unit_4dp"
                card_view:cardElevation="@dimen/unit_4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/unit_4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/unit_4dp"
                        android:orientation="vertical">

                        <com.coruscate.centrecourt.CustomControls.TypefacedTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Price"
                            android:textSize="@dimen/unit_16dp"
                            app:fontStyle="bold" />


                        <LinearLayout
                            android:id="@+id/lenearLayoutSeekBar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/unit_16dp"
                            android:paddingRight="@dimen/unit_16dp">

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/unit_16dp"
                            android:paddingRight="@dimen/unit_16dp">

                            <com.coruscate.centrecourt.CustomControls.TypefacedTextView
                                android:id="@+id/txtPriceMin"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_weight="1"
                                android:text="0"
                                android:textSize="@dimen/unit_16dp"
                                app:fontStyle="bold" />


                            <com.coruscate.centrecourt.CustomControls.TypefacedTextView
                                android:id="@+id/txtPriceMax"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/unit_4dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="5000"
                                android:textSize="@dimen/unit_16dp"
                                app:fontStyle="bold" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/unit_0.5dp"
                            android:layout_marginTop="@dimen/unit_8dp"
                            android:background="@color/gray" />

                        <com.coruscate.centrecourt.CustomControls.TypefacedTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/unit_8dp"
                            android:text="Egg/Eggless"
                            android:textSize="@dimen/unit_16dp"
                            app:fontStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/unit_4dp"
                            android:layout_marginTop="@dimen/unit_4dp"
                            android:orientation="horizontal">

                            <com.coruscate.centrecourt.CustomControls.TypefacedCheckBox
                                android:id="@+id/cbEggless"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/unit_32dp"
                                android:layout_weight="1"
                                android:text="Eggless"
                                android:textColor="@color/gray" />

                            <com.coruscate.centrecourt.CustomControls.TypefacedCheckBox
                                android:id="@+id/cbEggWith"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/unit_32dp"
                                android:layout_weight="1"
                                android:text="With Egg "
                                android:textColor="@color/gray" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/unit_0.5dp"
                            android:background="@color/gray" />

                        <com.coruscate.centrecourt.CustomControls.TypefacedTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/unit_8dp"
                            android:text="Weight"
                            android:textSize="@dimen/unit_16dp"
                            app:fontStyle="bold" />


                        <LinearLayout
                            android:id="@+id/lenearLayoutSeekBarWeihgt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/unit_16dp"
                            android:paddingRight="@dimen/unit_16dp">

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/unit_16dp"
                            android:paddingRight="@dimen/unit_16dp">

                            <com.coruscate.centrecourt.CustomControls.TypefacedTextView
                                android:id="@+id/txtWeightMin"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:text="0"
                                android:textSize="@dimen/unit_16dp"
                                app:fontStyle="bold" />

                            <com.coruscate.centrecourt.CustomControls.TypefacedTextView
                                android:id="@+id/txtWeightMax"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/unit_4dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="10"
                                android:textSize="@dimen/unit_16dp"
                                app:fontStyle="bold" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/unit_0.5dp"
                            android:layout_marginTop="@dimen/unit_8dp"
                            android:background="@color/gray" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/unit_8dp"
                            android:orientation="horizontal">

                            <com.coruscate.centrecourt.CustomControls.TypefacedTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="Flavours"
                                android:textSize="@dimen/unit_16dp"
                                app:fontStyle="bold" />

                            <ImageView
                                android:id="@+id/imgAddFlavour"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/unit_8dp"
                                android:padding="@dimen/unit_4dp"
                                android:src="@drawable/ic_add_circle_black_24dp" />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">

                            <!--   <ImageView
                                   android:id="@+id/ibLeftNonShape"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:layout_alignParentLeft="true"
                                   android:layout_centerVertical="true"
                                   android:src="@drawable/icon_prev"
                                   android:visibility="gone" />

                               <ImageView
                                   android:id="@+id/ibRightNonShape"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:layout_alignParentRight="true"
                                   android:layout_centerVertical="true"
                                   android:src="@drawable/icon_next_1"
                                   android:visibility="gone" />-->

                            <HorizontalScrollView
                                android:id="@+id/hsvFilter"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/unit_8dp"
                                android:orientation="horizontal"
                                android:scrollbars="none">

                                <LinearLayout
                                    android:id="@+id/lenearLayoutFlavour"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                </LinearLayout>
                            </HorizontalScrollView>
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearlayoutBottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="@dimen/unit_8dp"
                        android:orientation="horizontal">

                        <com.coruscate.centrecourt.CustomControls.TypedfacedButton
                            android:id="@+id/btnClear"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/unit_32dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/unit_0.5dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_selecter_round_corner"
                            android:text="Clear"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            app:fontStyle="regular" />

                        <com.coruscate.centrecourt.CustomControls.TypedfacedButton
                            android:id="@+id/btnOk"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/unit_32dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/unit_0.5dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_selecter_round_corner"
                            android:text="Apply"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            app:fontStyle="regular" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>