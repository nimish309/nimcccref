<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/progressBar"
        android:visibility="gone"
        android:layout_width="@dimen/unit_48dp"
        android:layout_height="@dimen/unit_48dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <com.coruscate.centrecourt.CustomControls.TypefacedTextView
        android:id="@+id/txtNoResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="Opps!!! No Data Found"
        android:textSize="@dimen/unit_20dp"
        android:visibility="visible"
        app:fontStyle="regular" />
</RelativeLayout>