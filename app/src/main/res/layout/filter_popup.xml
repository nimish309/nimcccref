<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <com.coruscate.centrecourt.CustomControls.TypefacedTextView
        android:id="@+id/txtShapePopUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/actionbar"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="Flavour"
        android:textColor="@color/white"
        android:textSize="@dimen/unit_16dp"
        app:fontStyle="bold" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/txtShapePopUp"
        android:background="@color/gray" />

    <ListView
        android:id="@+id/listShapePopUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearShapePopUp"
        android:layout_below="@+id/view" >
    </ListView>

    <!-- <View -->
    <!-- android:layout_width="match_parent" -->
    <!-- android:layout_height="0.5dp" -->
    <!-- android:background="@color/etborder" /> -->

    <LinearLayout
        android:id="@+id/linearShapePopUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <com.coruscate.centrecourt.CustomControls.TypedfacedButton
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:background="@drawable/button_selector"
            android:text="Cancel"
            android:textColor="@android:color/white"
            android:textSize="@dimen/unit_16dp" />

        <com.coruscate.centrecourt.CustomControls.TypedfacedButton
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:background="@drawable/button_selector"
            android:text="Done"
            android:textColor="@android:color/white"
            android:textSize="@dimen/unit_16dp"  />
    </LinearLayout>

</RelativeLayout>