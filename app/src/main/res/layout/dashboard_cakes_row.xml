<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewDashboardListRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/unit_8dp"
    android:layout_marginTop="@dimen/unit_8dp"
    android:layout_marginRight="@dimen/unit_8dp"
    android:background="@android:color/white"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    card_view:cardCornerRadius="@dimen/unit_4dp"
    card_view:cardElevation="@dimen/unit_3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ImgRowImage"
            android:layout_width="@dimen/unit_80dp"
            android:layout_height="@dimen/unit_80dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/unit_20dp"
            android:padding="@dimen/unit_10dp" />

        <com.coruscate.centrecourt.CustomControls.TypefacedTextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/unit_20dp"
            android:layout_toLeftOf="@id/ImgRowImage"
            android:padding="@dimen/unit_1dp"
            android:text="Sweet hart cake"
            android:textColor="@color/gray"
            android:textSize="18dp"
            app:fontStyle="regular" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
