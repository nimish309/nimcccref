<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.coruscate.centrecourt">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <!--
     To retrieve OAuth 2.0 tokens or invalidate tokens to disconnect a user. This disconnect
     option is required to comply with the Google+ Sign-In developer policies
    -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <!-- To retrieve the account name (email) as part of sign-in: -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:theme="@style/MyAppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/GeneralTheme" />
        <activity
            android:name=".UserInterface.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UserInterface.Activity.PermissionIntro"
            android:label="@string/app_name" />
        <activity
            android:name=".UserInterface.Activity.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/LoginTheme" />
        <activity
            android:name=".UserInterface.Activity.MiscellaneousActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- My debug key -->
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/map_key" />
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name=".UserInterface.Activity.ItemReviewActivity"
            android:label="@string/title_activity_item_review"
            android:screenOrientation="portrait"
            android:theme="@style/GeneralTheme" />
        <activity
            android:name=".UserInterface.Activity.RegisterActivity"
            android:label="@string/title_activity_register"
            android:screenOrientation="portrait"
            android:theme="@style/GeneralTheme" />
        <activity
            android:name=".UserInterface.Activity.UpdateProfileActivity"
            android:label="@string/title_activity_register"
            android:screenOrientation="portrait"
            android:theme="@style/GeneralTheme" />
        <activity
            android:name=".UserInterface.Activity.MyCart"
            android:label="@string/title_activity_my_cart"
            android:screenOrientation="portrait"
            android:theme="@style/GeneralTheme" />
        <activity
            android:name=".UserInterface.Activity.ShippingDetail"
            android:label="@string/title_activity_shipping_detail"
            android:screenOrientation="portrait"
            android:theme="@style/GeneralTheme" />
        <activity
            android:name=".UserInterface.Activity.OrderListActivity"
            android:label="@string/title_activity_order_list"
            android:screenOrientation="portrait"
            android:theme="@style/GeneralTheme" />
        <activity
            android:name=".UserInterface.Activity.AddressListActivity"
            android:label="@string/title_activity_my_address_list"
            android:screenOrientation="portrait"
            android:theme="@style/GeneralTheme" />
        <activity
            android:name=".UserInterface.Activity.AddAddressActivity"
            android:label="@string/title_activity_add_address"
            android:screenOrientation="portrait"
            android:theme="@style/GeneralTheme" />
        <activity
            android:name=".UserInterface.Activity.PaymentInfoActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UserInterface.Activity.ItemDetailActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/GeneralTheme" />
        <activity
            android:name=".UserInterface.Activity.StatusActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/GeneralTheme" />
        <activity
            android:name=".CustomControls.ImageCropActivity"
            android:label="@string/title_activity_my_address_list"
            android:screenOrientation="portrait"
            android:theme="@style/GeneralTheme" />
        <activity
            android:name=".UserInterface.Activity.NewsLetterActivity"
            android:label="@string/title_activity_news_letter"
            android:screenOrientation="portrait"
            android:theme="@style/GeneralTheme" />
        <activity
            android:name=".UserInterface.Activity.TrackOrderActivity"
            android:label="@string/title_activity_track_order"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UserInterface.Activity.WebViewActivity"
            android:screenOrientation="portrait"
            android:theme="@style/GeneralTheme" />
        <activity
            android:name=".UserInterface.Activity.WebViewPrivacyActivity"
            android:screenOrientation="portrait"
            android:theme="@style/GeneralTheme" />
        <activity
            android:name=".UserInterface.Activity.GiftVoucher"
            android:screenOrientation="portrait"
            android:theme="@style/GeneralTheme" />
        <activity
            android:name=".UserInterface.Activity.ChangePassword"
            android:label="@string/title_activity_change_password"
            android:screenOrientation="portrait"
            android:theme="@style/GeneralTheme"></activity>
    </application>

</manifest>
